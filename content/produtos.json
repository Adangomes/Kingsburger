/* =====================================================
   RESET
   ===================================================== */
** {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

/* =====================================================
   BODY
   ===================================================== */
body {
    background: #f8f9fa;
    color: #1a1a1a;
    min-height: 100vh;
}

/* =====================================================
   HEADER
   ===================================================== */
.header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: #e50914;
    padding: 12px 20px;
    color: #fff;
    position: sticky;
    top: 0;
    z-index: 1000;
    box-shadow: 0 2px 6px rgba(0,0,0,0.15);
}

.logo {
    font-size: 22px;
    font-weight: bold;
}

.hamburger,
.cart {
    background: none;
    border: none;
    font-size: 24px;
    cursor: pointer;
    color: #fff;
}

/* =====================================================
   MENU
   ===================================================== */
.menu {
    display: none;
    flex-direction: column;
    background: #e50914;
    position: absolute;
    top: 60px;
    right: 20px;
    padding: 15px;
    border-radius: 8px;
    z-index: 2000;
}

.menu.active { display: flex; }

.menu a {
    color: #fff;
    text-decoration: none;
    padding: 8px 0;
    font-weight: 500;
}

/* =====================================================
   STATUS
   ===================================================== */
.status {
    padding: 6px 10px;
    font-weight: bold;
    border-radius: 6px;
    font-size: 12px;
}

.status.aberto { background: #27ae60; }
.status.fechado { background: #c0392b; }

/* =====================================================
   SEÇÃO DE DESTAQUES / GRID DE PRODUTOS
   ===================================================== */
.destaques {
    padding: 25px 15px;
    background: #f8f9fa;
    min-height: calc(100vh - 120px);
}

.destaques h2 {
    font-size: 22px;
    font-weight: 700;
    margin-bottom: 20px;
}

/* GRID DE PRODUTOS */
.cards,
.cards-bebidas,
.cards-sobremesas,
.products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
    gap: 16px;
    padding: 16px;
}

/* CARD DE PRODUTO */
.product-card {
    background: #fff;
    border-radius: 14px;
    overflow: hidden;
    box-shadow: 0 4px 14px rgba(0,0,0,.08);
    display: flex;
    flex-direction: column;
}

/* IMAGEM */
.product-card .image-wrapper {
    width: 100%;
    height: 140px;
    background: #f1f1f1;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
}

.product-card .image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

/* CONTEÚDO DO CARD */
.product-card .content {
    padding: 16px;
    display: flex;
    flex-direction: column;
    flex: 1;
    text-align: center;
}

/* TÍTULO */
.product-card h3 {
    font-size: 16px;
    font-weight: 700;
    margin-bottom: 8px;
    color: #111;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

/* DESCRIÇÃO */
.product-card .desc {
    font-size: 12px;
    color: #666;
    line-height: 1.4;
    margin-bottom: 12px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

/* PREÇO */
.price {
    font-weight: 700;
    font-size: 26px;
    color: #111;
    text-align: center;
    width: 100%;
    margin-bottom: 8px;
}

/* BOTÃO */
.btn {
    width: 100%;
    height: 40px;
    border-radius: 0 0 14px 14px;
    background: #e50914;
    color: #fff;
    border: none;
    font-size: 20px;
    font-weight: 700;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.2s, transform 0.2s;
}

.btn:hover {
    background: #b00610;
    transform: scale(1.05);
}

/* =====================================================
   MODAL DE CARRINHO
   ===================================================== */
#cart-modal {
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.7);
    display: none;
    justify-content: center;
    align-items: center;
    z-index: 3000;
    padding: 15px;
}

.cart-box {
    background: #fff;
    padding: 25px 20px 20px 20px;
    border-radius: 16px;
    width: 100%;
    max-width: 450px;
    max-height: 90vh;
    overflow-y: auto;
    box-shadow: 0 12px 30px rgba(0,0,0,0.25);
    position: relative;
}

/* X para fechar modal */
.cart-box .close-btn {
    position: absolute;
    top: 12px;
    right: 12px;
    font-size: 28px;
    font-weight: 700;
    color: #e50914;
    cursor: pointer;
    transition: color 0.2s;
}

.cart-box .close-btn:hover {
    color: #b00610;
}

/* Título */
.cart-box h2 {
    text-align: center;
    font-size: 22px;
    font-weight: 700;
    margin-bottom: 20px;
}

/* Itens do carrinho */
#cart-items .cart-item {
    background: #fff;
    border: 2px solid #e50914;
    border-radius: 12px;
    padding: 10px 12px;
    margin-bottom: 12px;
    display: flex;
    align-items: center;
    gap: 12px;
}

/* Botões do carrinho - empilhados verticalmente */
.cart-box .cart-buttons {
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin-top: 15px;
}

.cart-box .cart-buttons button {
    width: 100%;
    padding: 14px 0;
    font-size: 16px;
    font-weight: 700;
    border-radius: 12px;
    border: none;
    cursor: pointer;
    transition: background 0.2s, transform 0.2s;
}

.cart-box .cart-buttons button.continuar {
    background: #ddd;
    color: #333;
}

.cart-box .cart-buttons button.finalizar {
    background: #e50914;
    color: #fff;
}

.cart-box .cart-buttons button.limpar {
    background: #c0392b;
    color: #fff;
}

.cart-box .cart-buttons button:hover {
    transform: scale(1.03);
}

.cart-box .cart-buttons button.finalizar:hover {
    background: #b00610;
}

.cart-box .cart-buttons button.limpar:hover {
    background: #a03129;
}

/* =====================================================
   MODAL DE ENTREGA / FORMULÁRIO
   ===================================================== */
#delivery-modal {
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.7);
    display: none;
    justify-content: center;
    align-items: flex-start; /* sobe no topo */
    z-index: 4000;
    padding: 20px 15px;
}

.delivery-box {
    background: #fff;
    padding: 30px 25px;
    border-radius: 18px;
    width: 100%;
    max-width: 500px;
    max-height: 90vh;
    overflow-y: auto;
    box-shadow: 0 15px 40px rgba(0,0,0,0.3);
    animation: fadeInUp 0.4s ease-out;
    margin-top: 30px;
}

/* Botões voltar/proximo maiores */
.delivery-box .buttons {
    display: flex;
    justify-content: space-between;
    gap: 10px;
    margin-top: 15px;
    flex-wrap: wrap;
}

.delivery-box .buttons button {
    flex: 1;
    padding: 14px 0;
    font-weight: 700;
    font-size: 16px;
    border-radius: 12px;
    border: none;
    cursor: pointer;
    transition: background 0.2s, transform 0.2s;
}

.delivery-box .buttons button:first-child {
    background: #ddd;
    color: #333;
}

.delivery-box .buttons button:last-child {
    background: #e50914;
    color: #fff;
}

.delivery-box .buttons button:hover {
    transform: scale(1.03);
}

.delivery-box .buttons button:last-child:hover {
    background: #b00610;
}

/* Inputs, labels e scroll */
.delivery-box input,
.delivery-box select,
.delivery-box textarea {
    width: 100%;
    padding: 10px 12px;
    margin-bottom: 14px;
    border: 1px solid #ddd;
    border-radius: 10px;
    font-size: 14px;
    transition: border-color 0.2s, box-shadow 0.2s;
}

.delivery-box input:focus,
.delivery-box select:focus,
.delivery-box textarea:focus {
    border-color: #e50914;
    box-shadow: 0 0 5px rgba(229,9,20,0.4);
    outline: none;
}

.delivery-box label {
    font-weight: 600;
    font-size: 14px;
    margin-bottom: 4px;
    display: block;
    color: #333;
}

#troco-box { display: none; }

/* =====================================================
   RESUMO DO PEDIDO - MAIS DESTACADO
   ===================================================== */
#resumo-pedido {
    display: none;
    padding: 15px;
    border-radius: 14px;
    background: #fff0f3;
    border: 2px solid #e50914;
    margin-top: 15px;
}

#resumo-pedido h3 {
    text-align: center;
    font-size: 20px;
    font-weight: 700;
    color: #e50914;
    margin-bottom: 10px;
}

#resumo-pedido #resumo-itens div {
    margin-bottom: 6px;
    font-size: 14px;
    color: #444;
}

#resumo-pedido p {
    font-size: 16px;
    color: #111;
    margin: 8px 0;
}

#resumo-total {
    font-weight: 800;
    font-size: 20px;
    color: #e50914;
}

/* Scroll elegante */
.delivery-box::-webkit-scrollbar {
    width: 6px;
}

.delivery-box::-webkit-scrollbar-track {
    background: #f0f0f0;
    border-radius: 3px;
}

.delivery-box::-webkit-scrollbar-thumb {
    background: #e50914;
    border-radius: 3px;
}

/* RESPONSIVO */
@media (max-width: 480px) {
    .delivery-box {
        padding: 20px 15px;
        margin-top: 10px;
    }

    .delivery-box .buttons button {
        font-size: 14px;
        padding: 12px 0;
    }

    #cart-modal .cart-box {
        max-width: 90%;
    }
}
